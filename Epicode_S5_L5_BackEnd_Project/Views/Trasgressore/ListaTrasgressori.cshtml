@{
    ViewBag.Title = "ListaTrasgressori";
}

<div class="container text-center">
    <div class="row">
        <div>
            <h2 class="text-center">Lista dei Trasgressori</h2>
        </div>
        <div class="text-right mt-3 mb-3">
            <a href="@Url.Action("AggiungiTrasgressore", "Trasgressore")" class="btn btn-primary">Aggiungi Trasgressore</a>
        </div>
        <hr />
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Cognome</th>
                <th>Nome</th>
                <th>Indirizzo</th>
                <th>Città</th>
                <th>CAP</th>
                <th>Codice Fiscale</th>
                <th>Azioni</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var trasgressore in Model)
            {
                <tr>
                    <td>@trasgressore.IdAnagrafica</td>
                    <td>@trasgressore.Cognome</td>
                    <td>@trasgressore.Nome</td>
                    <td>@trasgressore.Indirizzo</td>
                    <td>@trasgressore.Citta</td>
                    <td>@trasgressore.Cap</td>
                    <td>@trasgressore.Codice</td>
                    <td>
                        <a href="@Url.Action("ModificaTrasgressore", "Trasgressore", new { id = trasgressore.IdAnagrafica })" class="btn btn-warning btn-sm">Modifica</a>
                        <a href="@Url.Action("EliminaTrasgressore", "Trasgressore", new { id = trasgressore.IdAnagrafica })" class="btn btn-danger btn-sm">Elimina</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
